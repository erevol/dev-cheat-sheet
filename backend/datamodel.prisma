enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Question {
  id: ID! @id @unique
  answer: String!
  topic: String!
  seniority: String!
  source: String!
  title: String! @unique
  votes: Int
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Job {
  id: ID! @id @unique
  jobTitle: String!
  company: String!
  topics: String!
  seniority: String!
  location: String!
  description: String!
  contact: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Seniority {
  id: ID! @id @unique
  name: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Topic {
  id: ID! @id @unique
  name: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
